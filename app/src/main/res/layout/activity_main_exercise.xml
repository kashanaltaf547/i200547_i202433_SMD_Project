        android:textSize="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:id="@+id/zz6"
        android:layout_width="170dp"
        android:weightSum="1"
        android:layout_marginTop="200dp"
