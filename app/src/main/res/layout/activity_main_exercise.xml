            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/zz8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:backgroundTint="@color/transparent"
