            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/zz23"
        android:layout_width="170dp"
        android:weightSum="1"
